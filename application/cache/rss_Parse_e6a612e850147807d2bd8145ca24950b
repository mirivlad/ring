read only = no<br />
valid users = "sidinhe", "yarkova"<br />
read list =<br />
write list = "sidinhe", "yarkova"<br />
admin users =<br />
force create mode = 0660<br />
force directory mode = 0660<br />
vfs objects = full_audit<br />
[UC]<br />
comment = UC_programm<br />
path = /home/samba/shares/uc<br />
browseable = yes<br />
read only = no<br />
valid users = @"uc", "carkova"<br />
read list =<br />
write list = @"uc", "carkova"<br />
admin users =<br />
force create mode = 0660<br />
force directory mode = 0660<br />
vfs objects = full_audit<br />
[root]<br />
comment = root<br />
path = /<br />
browseable = yes<br />
read only = no<br />
valid users = "mirv"<br />
read list =<br />
write list =<br />
admin users = "mirv"<br />
force create mode = 0660<br />
force directory mode = 0660<br />
vfs objects = full_audit</p>
<p>[zentyal-internal-backups]<br />
path = /var/lib/zentyal/conf/backups<br />
browseable = yes<br />
read only = yes<br />
valid users = @"Domain Admins"<br />
admin users = @"Domain Admins"<br />
force group = ebox<br />
force user = ebox</p>
<p>[zentyal-quarantine]<br />
path = /var/lib/zentyal/quarantine<br />
browseable = yes<br />
read only = no<br />
valid users = @"Domain Admins"<br />
admin users = @"Domain Admins"</p>
<p>[print$]<br />
comment = "Printer Drivers"<br />
path = /var/lib/samba/printers<br />
browseable = yes<br />
read only = yes<br />
guest ok = no<br />
write list = @"Domain Admins"<br />
valid users = @"Domain Users"<br />
</code></p>
]]></content:encoded>
